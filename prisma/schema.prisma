generator client {
  provider   = "prisma-client"
  output   = "../src/generated/"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completed   Boolean  @default(false)
}

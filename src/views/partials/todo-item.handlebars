<div class="todo-item d-flex align-items-start gap-3 p-3 mb-2 rounded"> 
    <form method="post" action="/todos/{{id}}/toggle">
        <button type="submit" class="btn {{#if completed}}btn-success{{else}}btn-outline-secondary{{/if}} btn-sm">
            <i class="bi {{#if completed}}bi-check-lg{{else}}bi-circle{{/if}}"></i>
        </button>
    </form>
    <div class="flex-grow-1">
        <span class="todo-title d-block">{{title}}</span>
        {{#if description}}
            <small class="text-muted">{{description}}</small>
        {{/if}}
    </div>
    <div class="d-flex gap-2">
        <a href="/todos/{{id}}/edit" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-pencil"></i>
        </a>
        <form action="/todos/{{id}}/delete" method="post" class="m-0">
            <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i>
            </button>
        </form>
    </div>
</div>
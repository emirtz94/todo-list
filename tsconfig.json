{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@prisma/client_generated": ["../prisma/generated/client"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_module", "dist"]
}